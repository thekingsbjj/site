    <script>
        // GRADE
        const schedule = {
            "1,3": [{h:"08:00",n:"JJ Kids"},{h:"09:00",n:"JJ Adulto"},{h:"18:00",n:"Muay Thai"},{h:"19:00",n:"JJ Kids"},{h:"20:00",n:"JJ Adulto"},{h:"21:00",n:"Boxe"}],
            "2,4": [{h:"19:00",n:"JJ Baby"},{h:"20:00",n:"MT Kids"},{h:"21:00",n:"MT Adulto"}],
            "5": [{h:"08:00",n:"NoGi Kids"},{h:"09:00",n:"NoGi Adulto"},{h:"18:00",n:"Muay Thai"},{h:"19:00",n:"NoGi Kids"},{h:"20:00",n:"NoGi Adulto"},{h:"21:00",n:"Boxe"}]
        };
        function filterDay(d) {
            document.querySelectorAll('.day-btn').forEach(b => { b.classList.remove('bg-kings-black','text-white'); b.classList.add('border-gray-200'); });
            const btn = document.querySelector(`[data-day="${d}"]`);
            if(btn) { btn.classList.remove('border-gray-200'); btn.classList.add('bg-kings-black','text-white'); }
            
            let cls = [];
            for(let k in schedule) if(k.split(',').includes(d.toString())) cls = schedule[k];
            
            const c = document.getElementById('classes-container');
            c.innerHTML = cls.length ? cls.map(x => `<div class="flex items-center justify-between p-4 bg-gray-50 rounded-xl border border-gray-100 hover:border-kings-orange/30 transition"><span class="font-black text-lg text-kings-orange">${x.h}</span><h4 class="font-bold uppercase text-xs tracking-widest text-gray-800">${x.n}</h4></div>`).join('') : `<div class="col-span-2 text-center py-10 text-gray-400 text-sm italic bg-gray-50 rounded-xl">Sem aulas neste dia.</div>`;
        }

        // STATUS
        function updateStatus() {
            const now = new Date();
            const d = now.getDay(), h = now.getHours(), m = now.getMinutes(), total = h*60+m;
            const dot = document.getElementById('live-dot'), txt = document.getElementById('status-text');
            let status = "closed", active = "";

            if(d !== 0 && d !== 6) {
                for(let k in schedule) {
                    if(k.split(',').map(Number).includes(d)) {
                        schedule[k].forEach(c => {
                            const [ch, cm] = c.h.split(':').map(Number);
                            const start = ch*60+cm, end = start+60, open = start-10;
                            if(total >= start && total < end) { status = "active"; active = c.n; }
                            else if(total >= open && total < start && status !== "active") { status = "opening"; active = c.n; }
                        });
                    }
                }
            }

            if(status === "active") { dot.className="inline-block w-2 h-2 rounded-full mr-2 bg-green-500 dot-pulse"; txt.innerText=`Rolando Agora: ${active}`; }
            else if(status === "opening") { dot.className="inline-block w-2 h-2 rounded-full mr-2 bg-yellow-400"; txt.innerText=`Abrindo para: ${active}`; }
            else { dot.className="inline-block w-2 h-2 rounded-full mr-2 bg-red-500"; txt.innerText="Academia Fechada"; }
        }

        // MODALS
        function openModal(id) { document.getElementById(id).classList.remove('hidden'); document.body.classList.add('modal-open'); }
        function closeModal(id) { document.getElementById(id).classList.add('hidden'); document.body.classList.remove('modal-open'); }
        function switchMetodologia(t) {
            ['kids','adults'].forEach(x => {
                document.getElementById(`tab-${x}-content`).classList.add('hidden');
                document.getElementById(`tab-${x}-btn`).className = "flex-1 py-4 text-xs font-bold uppercase tracking-widest text-gray-400 hover:bg-gray-50 transition";
            });
            document.getElementById(`tab-${t}-content`).classList.remove('hidden');
            document.getElementById(`tab-${t}-btn`).className = "flex-1 py-4 text-xs font-bold uppercase tracking-widest text-kings-orange bg-orange-50 border-b-2 border-kings-orange transition";
        }

        window.onload = () => {
            const today = new Date().getDay();
            filterDay(today === 0 ? 1 : today);
            updateStatus(); setInterval(updateStatus, 60000);
        };
    </script>
</body>
</html>
